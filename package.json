{
	"name": "clinical-submission",
	"version": "0.2.0",
	"description": "",
	"main": "dist/index.js",
	"private": true,
	"author": "Leonardo Rivera <lrivera@oicr.com>",
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"scripts": {
		"\n==================  LOCAL  ==================": "",
		"build": "pnpm run build:api && pnpm run build:ui",
		"build:ui": "pnpm --filter ./apps/data-dictionary-ui run build",
		"build:api": "pnpm --filter ./apps/submission run build:all",
		"\n==================  NX  ==================": "",
		"\n IMPORT-NOTE: NX currently doesn't like to run when building docker images. This does work locally though. But for our ci/cd pipelines, we utilize LOCAL scripts.": "",
		"build:all": "nx run-many --all --target=build:all",
		"dev:all": "concurrently --names=data-dictionary-ui,submission \"pnpm -w dev:ui\" \"pnpm -w dev:api\"",
		"dev:api": "nx run @clinical-submission/submission:start:dev",
		"dev:ui": "nx run @clinical-submission/data-dictionary-ui:dev"
	},
	"devDependencies": {
		"concurrently": "^9.1.2",
		"husky": "^9.1.7",
		"nx": "21.4.1",
		"prettier": "^3.5.1",
		"prettier-plugin-organize-imports": "^4.1.0",
		"rimraf": "^6.0.1",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"vite": "^5.4.14"
	},
	"aliases": {
		"@": "src"
	}
}
