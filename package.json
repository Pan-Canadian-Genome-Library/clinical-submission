{
	"name": "clinical-submission",
	"version": "0.2.0",
	"description": "",
	"main": "dist/index.js",
	"scripts": {
		"\n==================  Build  ==================": "",
		"build:compile": "rimraf dist && tsc",
		"build:copy": "copyfiles src/api-docs/**/*.yml dist/",
		"build:all": "pnpm build:compile && pnpm build:copy",
		"\n=============  Dev environment  =============": "",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"migrate:db:dev": "tsx src/scripts/migration.ts",
		"start:dev": "pnpm migrate:db:dev && tsx watch --clear-screen=false src/index.ts | pino-pretty",
		"\n========  Prod environment (compiled) =======": "",
		"migrate:db:prod": "node --import=./register.js src/scripts/migration.js",
		"start:prod": "pnpm migrate:db:prod && NODE_ENV=production node --import=./register.js src/index.js"
	},
	"private": true,
	"author": "Leonardo Rivera <lrivera@oicr.com>",
	"license": "AGPL-3.0-or-later",
	"type": "module",
	"dependencies": {
		"@overture-stack/lyric": "^0.8.1",
		"bytes": "^3.1.2",
		"cors": "^2.8.5",
		"csv-parse": "^5.6.0",
		"dotenv": "^16.4.5",
		"esm-module-alias": "^2.2.0",
		"express": "^4.19.2",
		"firstline": "^2.0.2",
		"helmet": "^7.1.0",
		"multer": "1.4.5-lts.1",
		"pino": "^9.2.0",
		"pino-http": "^10.1.0",
		"swagger-jsdoc": "^6.2.8",
		"swagger-ui-express": "^5.0.1",
		"zod": "^3.23.8"
	},
	"devDependencies": {
		"@types/bytes": "^3.1.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-serve-static-core": "4.19.5",
		"@types/firstline": "^2.0.4",
		"@types/multer": "^1.4.12",
		"@types/qs": "^6.9.18",
		"@types/swagger-jsdoc": "^6.0.4",
		"@types/swagger-ui-express": "^4.1.6",
		"copyfiles": "^2.4.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-simple-import-sort": "^12.1.0",
		"pino-pretty": "^11.2.1",
		"prettier-plugin-organize-imports": "^3.2.4",
		"rimraf": "^5.0.7",
		"tsx": "^4.15.7",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.13.1"
	},
	"aliases": {
		"@": "src"
	}
}
